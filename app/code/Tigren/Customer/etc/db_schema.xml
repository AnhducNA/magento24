<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="tigren_customer_question" resource="default" engine="innodb">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Title"/>
        <column xsi:type="text" name="content" nullable="true" comment="Content"/>
        <column xsi:type="timestamp" name="created_at" nullable="true" default="CURRENT_TIMESTAMP" comment="create_at"/>
        <column xsi:type="int" name="author_id" nullable="true" comment="Author ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
    <table name="tigren_customer_post">
        <column xsi:type="int" name="post_id" identity="true" unsigned="true"/>
        <column xsi:type="varchar" length="255" name="name" nullable="false" comment="Post Name"/>
        <column xsi:type="varchar" length="255" name="url_key" nullable="true" comment="Post URL Key"/>
        <column xsi:type="text" name="post_content" nullable="true" comment="Post Content"/>
        <column xsi:type="varchar" length="255" name="tags" nullable="true" comment="Post Tags"/>
        <column xsi:type="int" name="status" nullable="true" comment="Post Status"/>
        <column xsi:type="varchar" length="255" name="featured_image" nullable="true" comment="Post Featured Image"/>
        <column xsi:type="timestamp" name="created_at" nullable="true"
                default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="update_at" nullable="true"
                default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="post_id"/>
        </constraint>
    </table>
</schema>
