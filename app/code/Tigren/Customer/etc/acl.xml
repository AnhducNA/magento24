<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Tigren_Customer::customer" title="Customers" translate="title" sortOrder="40">
                    <resource id="Tigren_Customer::manage" title="All Customers" translate="title" sortOrder="10">
                        <resource id="Tigren_Customer::actions" title="Actions" translate="title" sortOrder="10">
                            <resource id="Tigren_Customer::create" title="Create" sortOrder="10"/>
                            <resource id="Tigren_Customer::delete" title="Delete" sortOrder="20"/>
                            <resource id="Tigren_Customer::view" title="View" sortOrder="30">
                                <resource id="Tigren_Customer::view_additional" title="View Additional Information"
                                          sortOrder="10"/>
                            </resource>
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Tigren_Customer::config_question" title="Customers Section" translate="title"
                                      sortOrder="50"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
